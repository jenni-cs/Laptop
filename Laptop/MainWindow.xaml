<Window x:Class="Laptop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laptop"
        mc:Ignorable="d"
        Title="Laptop Kölcsönzések" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Leltári számok" Height="45"/>
            <ListView x:Name="laptopok" SelectionChanged="laptopok_SelectionChanged"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label Content="Laptop adatai" Height="45"/>
            <Label Content="Laptop leltári szám" Height="30"/>
            <Label Content="Model" Height="30"/>
            <Label Content="RAM (GB)" Height="30"/>
            <Label Content="Szín" Height="30"/>
            <Label Content="Napi bérleti díj" Height="30"/>
            <Label Content="Kaució" Height="30"/>
            <Label Content="Bérlések darabszáma" Height="30"/>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <Label Content=" " Height="45"/>
            <Label x:Name="leltariSzam" Height="30"/>
            <Label x:Name="model" Height="30"/>
            <Label x:Name="ram" Height="30"/>
            <Label x:Name="szin" Height="30"/>
            <Label x:Name="napiDij" Height="30"/>
            <Label x:Name="kaucio" Height="30"/>
            <Label x:Name="berlesSzam" Height="30"/>
        </StackPanel>
    </Grid>
</Window>
